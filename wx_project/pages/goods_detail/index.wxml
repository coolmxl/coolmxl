<view class="detail_swiper">
	<swiper autoplay circular indicator-dots>
		<swiper-item wx:for="{{goodsObj.pics}}" wx:key="this" data-url="{{item}}">
			<image mode="widthFix" src="{{item}}"></image>
		</swiper-item>
	</swiper>
</view>


<view class="goods_price">￥{{goodsObj.goods_price}}</view>
<view class="goods_name_row">
	<view class="goods_name">{{goodsObj.goods_name}}</view>
	<view class="goods_collect" bindtap="handleCollect">
		<text class="iconfont   {{isCollect?'icon-shoucang1':'icon-shoucang'}} "></text>
		<view class="collect_text">收藏</view>
	</view>
</view>

<view class="goods_info">
	<view class="goods_info_title">信息详情</view>
	<view class="goods_info_content">
		<!-- 富文本 -->
		<!-- {{goodsObj.goods_introduce}} -->
		<rich-text nodes="{{goodsObj.goods_introduce}}"></rich-text>
	</view>
</view>

<view class="goods_info jump">
	<view class="jump-item">
		<view class="jump-item-box">
			<span class="">类别</span>
			<span class="jump-item-box-text">{{goodsObj.tag}}</span>
		</view>
	</view>

	<view class="jump-item">
		<view class="jump-item-box">
			<span class="">作者</span>
			<span class="jump-item-box-text">{{goodsObj.author}}</span>
		</view>
	</view>
	<view class="jump-item">
		<view class="jump-item-box">
			<span class="">出版社</span>
			<span class="jump-item-box-text">{{goodsObj.press}}</span>
		</view>
	</view>
	<view class="jump-item">
		<view class="jump-item-box">
			<span class="">出版时间</span>
			<span class="jump-item-box-text">{{goodsObj.time}}</span>
		</view>
	</view>
	<view class="jump-item">
		<view class="jump-item-box">
			<span class="">图书信息</span>
			{{goodsObj.content}}
			<span class="jump-item-box-text"></span>
		</view>
	</view>
</view>

<view class="btm_tool">
	<view class="tool_item">
		<view class="iconfont icon-kefu"></view>
		<view>客服</view>
		<button open-type="contact"></button>
	</view>
	<view class="tool_item">
		<view class="iconfont icon-yixianshi-"></view>
		<view>分享</view>
		<button open-type="share"></button>
	</view>
	<navigator open-type="switchTab" url="/pages/cart/index" class="tool_item">
		<view class="iconfont icon-gouwuche"></view>
		<view>购物车</view>
	</navigator>
	<view class="tool_item btn_cart " bindtap="handleCartAdd">
		加入购物车
	</view>
	<view class="tool_item btn_buy" bindtap="handleBuy">
		立即购买
	</view>
</view>